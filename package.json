{
  "name": "karasubonk_bilibili",
  "version": "1.0.0",
  "description": "Lightweight item thrower for Live2D models - bilibili edition.",
  "repository": {
    "type": "git",
    "url": "git://github.com/LuiScreaMed/karasubonk_bilibili"
  },
  "main": "main.js",
  "dependencies": {
    "bilibili-live-ws": "^6.2.2",
    "electron-squirrel-startup": "^1.0.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "@types/ws": "^8.5.4",
    "electron": "^24.1.1"
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package --arch ia32 && electron-forge package --arch x64",
    "make": "electron-forge make"
  },
  "author": "LuiScreaMed",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./icon.ico",
        "prune": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "karasubonk_bilibili"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
